<?xml version="1.0" encoding="UTF-8"?>
<scr:components xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0">
  <scr:component name="org.opencastproject.kernel.mail.SmtpService" immediate="true">
    <implementation class="org.opencastproject.kernel.mail.SmtpService" />
    <property name="service.description" value="SMTP Service" />
    <service>
      <provide interface="org.osgi.service.cm.ManagedService" />
      <provide interface="org.opencastproject.kernel.mail.SmtpService" />
    </service>
    <reference name="EmailTemplateScanner" interface="org.opencastproject.kernel.mail.EmailTemplateScanner" policy="static" cardinality="1..1" bind="setEmailTemplateScanner" />    
    <reference name="Workspace" cardinality="1..1" interface="org.opencastproject.workspace.api.Workspace"
      policy="static" bind="setWorkspace" />
  </scr:component>
</scr:components>